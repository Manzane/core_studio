<h1>Packages de crédits</h1>
<div>
    <% @packages.each do |package| %>
        <div>
            <p>Crédits pour les <%= package.category.name %></p>
            <p>Quantité: <%= package.quantity %></p>
            <p>Prix: <%= package.price %></p>
            <!-- DEBUG SI USER NON LOGUÉ-->
            <% if current_user %>
            <%= button_to 'Ajouter au panier', cart_cart_items_path(current_user.carts.first, package_id: package.id)%>
            <% end %>
        </div>
    <% end %>
</div>  

