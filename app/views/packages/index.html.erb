<h1>Packages de crédits</h1>
<div>
    <% @packages.each do |package| %>
        <div>
            <p>Crédits - <%= package.category.name %></p>
            <p>Quantité: <%= package.quantity %></p>
            <p>Prix: <%= humanized_money_with_symbol(package.price) %></p>
            <!-- DEBUG SI USER NON LOGUÉ-->
            <% if current_user %>
                <%= button_to 'Ajouter au panier', cart_cart_items_path(current_user.cart, package_id: package.id), class: 'btn btn-primary' %>
            <% else %>
                <%= button_to 'Se créer un compte', new_user_registration_path, class: 'btn btn-primary' %>
            <% end %>
        </div>
    <% end %>
</div>  

