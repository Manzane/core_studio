<div class="container">
    <h1>Packages de crédits</h1>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1"> 
        <% @packages.each do |package| %>
            <div class="col mb-4">
                <div class="card card-package">
                    <% if package.image.attached? %>
                        <%= cl_image_tag package.image.key, class: "card-img-top" %>
                    <% else %>
                        <%= image_tag("pckg.jpg", class: "card-img-top", alt:"package-credit-#{package.category.name}-#{package.quantity}") %>
                    <% end %>
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= package.quantity %> Crédits - <%= package.category.name %></h5>
                        <p class="card-text">Prix: <%= humanized_money(package.price) %>€</p>
                        <p class="card-text"><small>Soit <%= package.price / package.quantity%> € l'unité</small></p>
                    </div>
                    <div class="card-footer text-center">
                        <% if current_user %>
                            <%= button_to 'Ajouter au panier', cart_cart_items_path(current_user.carts.last, package_id: package.id), class: 'btn btn-primary' %>
                        <% else %>
                            <%= button_to 'Se créer un compte', new_user_registration_path, class: 'btn btn-primary', method: :get %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %> 
    </div>
</div> 

