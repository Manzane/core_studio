<div class="container">
  <div class="row py-4">
    <div class="col-md-3"></div>
    <div class="col">
      <h1>Récapitulatif de Commande</h1>
      <p>Commande <strong><%= @order.id %></strong> pour <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
      <ul>
      <% @order.cart.packages.each do |package| %>
      <li><%= package.quantity%> Crédits <%= package.category.name %></li>
      <% end %>
    </ul>
      <button id="pay" class="btn btn-primary">Payer</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>