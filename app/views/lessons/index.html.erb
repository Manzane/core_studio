<h1>Planning</h1>


<%= month_calendar events: @lessons do |date, lessons| %>
  <%= date %>
  <% lessons.each do |lesson| %>
    <div>
      <%= lesson.name %>
      <%= lesson.start_time %>
      <%= lesson.end_time %>
      <div class="">
        <%= link_to lesson_path(lesson) do %>
          <div class="btn">Voir plus</div>
        <% end %>
        <% if lesson.full? %>
          <p>Cours complet</p>
        <% elsif lesson.one_day_before_lesson? %>
          <%= link_to new_lesson_booking_path(lesson) do %>
            <div class="btn btn-book">RÃ©server</div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

