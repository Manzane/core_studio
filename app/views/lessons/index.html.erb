<h1 class="planning">Planning</h1> 
<div class="container">
  <div class="text-center">          
      <%= week_calendar events: @lessons do |date, lessons| %>
        <div class="lesson-header">
          <%= date.to_s(:long) %>
        </div>
        <div class="card card-planning px-2" >
        <% lessons.each do |lesson| %>
            <div class="card-body bg-<%= lesson.color%> card-lesson my-3">
              <h6 class="card-title"><%= lesson.name %></h6>
              <span><i class="far fa-clock"></i> <%= lesson.start_time.to_s(:time) %> - <%= lesson.end_time.to_s(:time)%></span>
              <div class="card-bottom">
                <!--
                <%= link_to lesson_path(lesson) do %>
                  <button class="btn btn-outline-primary">+</button>
                <% end %>-->
                <% if lesson.full? %>
                  <div class="text-muted btn-lesson">
                  Cours complet
                  </div>
                <% elsif lesson.one_day_before_lesson? %>
                  <%= link_to new_lesson_booking_path(lesson) do %>
                    <button class="btn btn-lesson">RÃ©server</button>
                  <% end %>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>  
      <% end %>
  </div>
</div> 

