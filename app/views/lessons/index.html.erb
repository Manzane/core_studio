<h1>Planning</h1>
<%= month_calendar events: @lessons do |date, lessons| %>
  <%= date.to_s(:long) %>
  <% lessons.each do |lesson| %>
    <div>

      <%= lesson.name %>
      <%= lesson.start_time %>
      <%= lesson.duration %> heures
      <%= lesson.recurring %>
      <div class="">
        <%= link_to lesson_path(lesson) do %>
          <button class="btn btn-primary">Voir plus</button>
        <% end %>
        <% if lesson.full? %>
          <p>Cours complet</p>
        <% elsif lesson.one_day_before_lesson? %>
          <%= link_to new_lesson_booking_path(lesson) do %>
            <button class="btn btn-primary">RÃ©server</button>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

