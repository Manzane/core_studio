<div class="container">
  <h2>Editer vos informations</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de la confirmation de compte pour: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laissez le champs vide si vous ne désirez pas le changer",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "Veuillez renseigner votre mot de passe actuel afin de valider les changements",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enregistrer", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h5>Suppression du compte</h5>

  <p>Mécontent(e)? <%= link_to "Supprimer le compte", registration_path(resource_name), data: { confirm: "Etes-vous certain(e)?" }, method: :delete %></p>

  <%= link_to "Retour", :back %>
</div>